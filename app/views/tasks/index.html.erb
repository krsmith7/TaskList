
<h1>Tasks</h1>
<% @tasks.each do |task| %>
  <ul>
    <li><%= task.action %> <%= link_to "View Details", task_path(task.id) %></li>
    <li><%= link_to "Delete task", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete?"}%></li>
  </ul>
<% end %>
<%= link_to "Add a new task", new_task_path %>
