<%= form_with model: @task, class: 'new-task-form' do |f| %>
  <h1>Enter your new task: </h1>
  <%= f.label :action %>:
    <%= f.text_field :action%>
  <%= f.label :description %>:
    <%= f.text_field :description %>
  <%= f.label :completion_date %>:
    <%= f.text_field :completion_date %>
  <%= f.submit "Save Task" %>
<% end %>
