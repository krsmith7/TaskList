<%= form_with model: @task, class: 'task-form' do |f| %>
  <p><%= f.label :action %>:
    <%= f.text_field :action%></p>
  <p><%= f.label :description %>:
    <%= f.text_area :description %></p>
  <p><%= f.label :completion_date %>: 
    <%= f.date_field :completion_date %></p>
  <%= f.submit "Save Task" %>
<% end %>
